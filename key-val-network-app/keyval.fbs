rpc_service KeyValSvc {
  Put(PutReq): PutRsp;
  Get(GetReq): GetRsp;
}

table PutReq {
  key: string;
  val: string;
}

table PutRsp {
  added: bool; //if not added then it already exists and the value was replaced.
}

table GetReq {
  key: string;
}

table GetRsp {
  exists: bool;
  val: string;
}
